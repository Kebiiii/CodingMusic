<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liukebing.codingkeplayer.PlayRecordListActivity">

    <TextView
        android:id="@+id/title_play_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="最近播放会记录您最近听过的5首歌"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前没有播放记录"
        android:gravity="center_horizontal"
        android:layout_below="@+id/title_play_record"
        android:textSize="15sp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listView_play_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2_no_data"
        android:layout_centerHorizontal="true"
        android:background="#dddfdd"/>

</RelativeLayout>
